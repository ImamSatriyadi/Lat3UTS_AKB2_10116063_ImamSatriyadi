<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"

    >

    <RelativeLayout
        android:id="@+id/rel_desc_about"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:background="@drawable/style_border_f8"
        android:layout_below="@id/rel_profil"
        >
        <TextView
            android:id="@+id/txt_title_desc_about"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tentang Aplikasi:"
            android:layout_marginTop="8dp"
            android:textSize="15dp"
            />

        <Button
            android:id="@+id/btn_close"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/style_button_email"
            android:layout_alignParentRight="true"
            android:textSize="10dp"
            android:paddingLeft="7dp"
            android:drawableLeft="@drawable/ic_close"
            />
        <View
            android:id="@+id/view_10"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/txt_title_desc_about"
            android:layout_marginTop="8dp"
            android:background="#cececf"/>
        <TextView
            android:id="@+id/txt_content_desc_about"
            android:layout_below="@id/view_10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="ImamApps versi 1.0"
            android:textSize="13dp"
            android:gravity="center"
            />

        <TextView
            android:id="@+id/txt_content_desc_about1"
            android:layout_below="@id/txt_content_desc_about"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:text="Dibuat tanggal 19 April 2019"
            android:textSize="13dp"
            android:gravity="center"
            />

        <TextView
            android:id="@+id/txt_content_desc_about2"
            android:layout_below="@id/txt_content_desc_about1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:text="Direalease tanggal 5 Mei 2019"
            android:textSize="13dp"
            android:gravity="center"
            />

        <TextView
            android:id="@+id/txt_content_desc_about3"
            android:layout_below="@id/txt_content_desc_about2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Oleh"
            android:textSize="13dp"
            android:gravity="center"
            />
        <TextView
            android:id="@+id/txt_content_desc_about4"
            android:layout_below="@id/txt_content_desc_about3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:text="10116063 (AKB-2/IF-2) - IMAM SATRIYADI"
            android:textSize="13dp"
            android:gravity="center"
            />
        <TextView
            android:id="@+id/txt_content_desc_about5"
            android:layout_below="@id/txt_content_desc_about4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:text="TEKNIK INFORMATIKA"
            android:textSize="13dp"
            android:gravity="center"
            />

    </RelativeLayout>

</android.support.constraint.ConstraintLayout>